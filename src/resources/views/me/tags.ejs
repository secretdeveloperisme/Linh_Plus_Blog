<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../partials/head") %> 
  <title>Tags</title>
  <link rel="stylesheet" href="/css/base.css">
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <div class="app">
    <header class="sticky-top">
      <% if(user) {%> 
      <%- include("../partials/nav",{user:user}) %>
      <%}else {%> 
      <%- include("../partials/nav") %>
      <% } %> 
    </header>
    <div class="main px-4">
      <div class="sidebar overflow-auto pt-2 pb-5">
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item">
            <a href="/" class="nav-link link-dark d-flex" aria-current="page">
              <div>
                <i class="fas fa-home" aria-hidden="true"></i>
                Home
              </div>
            </a>
          </li>
          <li class="nav-item">
            <a href="/me/posts" class="nav-link link-dark d-flex" aria-current="page">
              <div>
                <i class="fas fa-file-alt" aria-hidden="true"></i>
                Posts
              </div>
              <span class="badge ms-auto bg-primary rounded-pill"><%= amounts.posts %></span>
            </a>
          </li>
          <li class="nav-item">
            <a href="/me/tags" class="nav-link link-dark d-flex active" aria-current="page">
              <div>
                <i class="fas fa-tag" aria-hidden="true"></i>
                Tags
              </div>
              <span class="badge ms-auto bg-primary rounded-pill"><%= amounts.tags %></span>
            </a>
          </li>
          <li class="nav-item">
            <a href="/me/following_users" class="nav-link link-dark d-flex" aria-current="page">
              <div>
                <i class="fas fa-user" aria-hidden="true"></i>
                Following Users
              </div>
              <span class="badge ms-auto bg-primary rounded-pill"><%= amounts.following_users %></span>
            </a>
          </li>
          <li class="nav-item ">
            <a href="/trash/posts" class="nav-link link-dark d-flex" aria-current="page">
              <div>
                <i class="fas fa-trash" aria-hidden="true"></i>
                Trash
              </div>
              <span class="badge ms-auto bg-primary rounded-pill"><%= amounts.trash_posts %></span>
            </a>
          </li>
          <li class="nav-connect">
            <ul class="connect-me list-style-none d-flex justify-content-center p-0">
              <li class="p-2"><a href=""><i class="fab fa-facebook" aria-hidden="true"></i></a></li>
              <li class="p-2"><a href=""><i class="fab fa-github" aria-hidden="true"></i></i></a></li>
              <li class="p-2"><a href=""><i class="fab fa-linkedin" aria-hidden="true"></i></a></li>
              <li class="p-2"><a href=""><i class="fab fa-blogger" aria-hidden="true"></i></a></li>
            </ul>
          </li>
        </ul>
      </div>
      <div class="content">
        <div class="posts px-4">
          <div class="text-center">
            <h1 class="mb-4">Tags</h1>
          </div>
          <div class="row g-3">
            <% tags.forEach(tag=>{ %>
              <div class="col-xl-4">
                <a href="/tag/<%= tag.name %>" class=" d-flex flex-column align-items-center bg-white py-2 shadow rounded">
                  <h3>#<%= tag.name%></h3>
                </a>
              </div>
            <% }) %>
          </div>
        <footer class="col-xl-12">
          <%- include("../partials/footer.ejs") %> 
        </footer>
      </div>
    </div>
    <ul class="nav-mobile list-style-none">
      <li class="top-link">
        <div class="btn rounded-circle btn-danger shadow" onclick="window.scrollTo({top:0})">
          <i class="fa fa-arrow-up" aria-hidden="true"></i>
        </div>
      </li>
    </ul>
  </div>
  <%- include("../auth/login") %>
  <script src="/js/home.js"></script>
  <script src="/js/login.js"></script>
  <script src="/js/FollowingUsers.js"></script>
</body>
</html>